<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="4dp"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/tag_result_item_display"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:background="@drawable/tag_list_item_bg"
        android:padding="7dp">

        <ImageView
            android:id="@+id/search_result_item_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:background="@drawable/upcomingiti_bg"
            android:src="@drawable/bg_taiwan"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/search_result_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/roboto_bold"
                    android:paddingStart="0dp"
                    android:paddingEnd="1dp"
                    android:textSize="17sp"
                    android:text="Wong Tai Sin Temple"/>
            </LinearLayout>

            <TextView
                android:id="@+id/search_result_item_address"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:textSize="14sp"
                android:paddingTop="1.3dp"
                android:layout_weight="1"
                android:layout_marginEnd="1dp"
                android:text="address of the attraction"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="185dp"
                android:layout_gravity="end">

                <ImageButton
                    android:id="@+id/shareButton"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="8dp"
                    android:background="#00ffffff"
                    android:src="@drawable/share_btn_icon"
                    app:tint="@color/darkOrange_0" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>